{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Data analysis pokemon!",

  "data": {"url": "https://raw.githubusercontent.com/CammieVolsci/DataVisUFF/master/Histograma/pokemon.csv"}, 

  "hconcat": [{
      "selection": 
      {
        "highlight": {"type": "multi", "empty": "none", "on": "mouseover"},
        "select": {"type": "single"}
      },

      "mark": 
      {
      "type": "bar",
      "stroke": "#585352",
      "cursor": "pointer"
      },

      "width": 450,
      "height": 500,

      "encoding": 
      {
        "x": {"field": "type1", "type": "nominal"},
        "y": {"aggregate": "count", "type": "quantitative", "title": "quantidade de pokemon"},

        "fillOpacity": 
        {
          "condition": {"selection": "select", "value": 1},
          "value": 0.3
        },

        "strokeWidth": 
        {
          "condition": 
          [
            {
              "test": {"and": [{"selection": "select"},"length(data(\"select_store\"))"]},
              "value": 2
            },
            {"selection": "highlight", "value": 1}
          ],
          "value": 0
        },
    
        "color": 
        {
          "field": "type1",
          "type": "nominal",
          "title": "tipos",
          "scale": 
          {
            "range": 
            [
              "#A8B820",
              "#705848",
              "#7038F8",
              "#F8D030",
              "#EE99AC",
              "#C03028",
              "#F08030",
              "#A890F0",
              "#705898",
              "#78C850",
              "#E0C068",
              "#98D8D8",
              "#A8A878",
              "#A040A0",
              "#F85888",
              "#B8A038",
              "#B8B8D0",
              "#6890F0"
            ]
          }
        },
        "tooltip": 
        [
          {"aggregate": "count", "type": "quantitative"},
          {"field": "type1", "type": "nominal"}
        ]
        
      }
  },
    {
     "transform": [{"filter": {"field": "type2", "gte": "0"}}],

     "selection": 
    {
      "highlight": {"type": "multi", "empty": "none", "on": "mouseover"},
      "select": {"type": "single"}
    },

    "mark": 
    {
    "type": "bar",
    "stroke": "#585352",
    "cursor": "pointer"
    },

    "width": 450,
    "height": 500,

    "encoding": 
    {
      "x": {"field": "type2", "type": "nominal"},
      "y": {"aggregate": "count", "type": "quantitative", "title": "quantidade de pokemon"},

      "fillOpacity": 
      {
        "condition": {"selection": "select", "value": 1},
        "value": 0.3
      },

      "strokeWidth": 
      {
        "condition": 
        [
          {
            "test": {"and": [{"selection": "select"},"length(data(\"select_store\"))"]},
            "value": 2
          },
          {"selection": "highlight", "value": 1}
        ],
        "value": 0
      },
  
      "color": 
      {
        "field": "type2",
        "type": "nominal",
        "title": "tipos",
        "scale": 
        {
          "range": 
          [
            "#A8B820",
            "#705848",
            "#7038F8",
            "#F8D030",
            "#EE99AC",
            "#C03028",
            "#F08030",
            "#A890F0",
            "#705898",
            "#78C850",
            "#E0C068",
            "#98D8D8",
            "#A8A878",
            "#A040A0",
            "#F85888",
            "#B8A038",
            "#B8B8D0",
            "#6890F0"
          ]
        }
      },
      "tooltip": 
      [
        {"aggregate": "count", "type": "quantitative"},
        {"field": "type2", "type": "nominal"}
      ]
      
    }
  }]
}