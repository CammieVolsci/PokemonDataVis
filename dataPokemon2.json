{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Data analysis pokemon!",

  "data": {"url": "https://raw.githubusercontent.com/CammieVolsci/DataVisUFF/master/Histograma/pokemon.csv"}, 

  "columns": 2,
  "concat": 
  [{

      "selection": 
      {
        "brush": {"type": "interval"}
      },
      "mark": "point",
      "width": 450,
      "height": 500,

      "encoding": 
      {
        "y": {"field": "base_total", "type": "quantitative", "title": "base total", "scale": {"domain": [100, 800]}},
        "x": {"field": "pokedex_number", "type": "quantitative", "title": "pokedex", "scale": {"domain": [0, 800]}},
        
        "color": 
        {
          "field": "type1",
          "type": "nominal",
          "title": "tipos",
          "scale": 
          {
            "range": 
            [
              "#A8B820",
              "#705848",
              "#7038F8",
              "#F8D030",
              "#EE99AC",
              "#C03028",
              "#F08030",
              "#A890F0",
              "#705898",
              "#78C850",
              "#E0C068",
              "#98D8D8",
              "#A8A878",
              "#A040A0",
              "#F85888",
              "#B8A038",
              "#B8B8D0",
              "#6890F0"
            ]
          }
        },
        "tooltip": 
        [
          {"field": "type1", "type": "nominal", "title": "tipo 1"},
          {"field": "type2", "type": "nominal", "title": "tipo 2"},
          {"field": "name", "type": "nominal", "title": "nome pokemon"}
        ]
        
      }
  },
  
    {
     "transform": [{"filter": {"selection": "brush"}}],

      "mark": "point",
      "width": 450,
      "height": 500,

      "encoding": 
      {
        "x": {"field": "attack", "type": "quantitative", "title": "Ataque"},
        "y": {"field": "defense", "type": "quantitative", "title": "Defesa"},
        "size": {"field": "hp", "type": "quantitative"},
    
        "color": 
        {
          "field": "type1",
          "type": "nominal",
          "title": "tipos",
          "scale": 
          {
            "range": 
            [
              "#A8B820",
              "#705848",
              "#7038F8",
              "#F8D030",
              "#EE99AC",
              "#C03028",
              "#F08030",
              "#A890F0",
              "#705898",
              "#78C850",
              "#E0C068",
              "#98D8D8",
              "#A8A878",
              "#A040A0",
              "#F85888",
              "#B8A038",
              "#B8B8D0",
              "#6890F0"
            ]
          }
        },

        "tooltip": 
        [
          {"field": "type1", "type": "nominal", "title": "tipo 1"},
          {"field": "type2", "type": "nominal", "title": "tipo 2"},
          {"field": "name", "type": "nominal", "title": "nome pokemon"}
        ]
      }
    }

  ]
}